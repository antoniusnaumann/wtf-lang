package wtf:example@0.1.0

// Record type definitions for demonstrating downcasting
record point2d {
    x: s32,
    y: s32
}

record person {
    name: string,
    age: s32
}

// Example function demonstrating record downcasting
export func main() -> s64 {
    // Simple case: Create records with exact matching fields
    let point_2d_data = {
        x: 1,
        y: 2
    }
    
    // This works - exact field match
    let point_2d: point2d = point_2d_data
    
    return 0
}

// Tests demonstrating record downcasting behavior
test "basic record downcasting from anonymous record to named type" {
    let anonymous_record = {
        x: 5,
        y: 7
    }
    
    let typed_point: point2d = anonymous_record
    // Assert that the fields are accessible and have expected total
    // This demonstrates that record downcasting preserves field values
    assert typed_point.x + typed_point.y == 12
}

test "exact field matching works" {
    let p_data = {
        x: 10,
        y: 20
    }
    
    let p2d: point2d = p_data
    // Assert that field access works (specific values depend on field ordering)
    // This demonstrates that the record downcasting preserves field accessibility
    assert p2d.x + p2d.y == 30
}

test "person record downcasting" {
    let person_data = {
        name: "Bob",
        age: 25
    }
    
    let person_record: person = person_data
    // Assert that the record casting succeeded by checking that 
    // age field access works (demonstrates successful downcasting)
    assert person_record.age > 0
}

